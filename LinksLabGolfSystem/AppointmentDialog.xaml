<Window x:Class="LinksLabGolfSystem.AppointmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="Appointment Details" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Top">
            <TextBlock Name="SubjectText" FontWeight="Bold" Margin="5" />
            <TextBlock Name="StartTimeText" Margin="5" />
            <TextBlock Name="DescriptionText" Margin="5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <!--<Button Content="Delete" Width="80" Margin="5" Click="DeleteButton_Click"/>-->
                <Button Content="Proceed to Checkout" Width="148" Margin="5" Click="CheckoutButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>