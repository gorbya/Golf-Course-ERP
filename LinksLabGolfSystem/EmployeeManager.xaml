<UserControl x:Class="LinksLabGolfSystem.EmployeeManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:LinksLabGolfSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

<Grid.ColumnDefinitions>
    <ColumnDefinition Width="3*"/>
    <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock FontWeight="Bold" Text="EmployeeManagement" Padding="12, 0 ,0 ,0 "/>

        <TextBlock FontWeight="Bold" Text="Employee Details" Grid.Column="1" Padding="12,0,0,0"/>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <ComboBox Grid.Column="1"  ItemsSource="{Binding Employees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
<TextBlock Text="Hours Scheduled: "/>
<TextBlock Text="Hours Worked: "/>
<TextBlock Text="Is Currently Punched In:"/>
        </StackPanel>
        <sf:SfScheduler Grid.Row="1"/>

    </Grid>
</UserControl>
