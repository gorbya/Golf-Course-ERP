<UserControl x:Class="LinksLabGolfSystem.EquipmentManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinksLabGolfSystem"
             mc:Ignorable="d" 
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="grdEquipment" CanUserAddRows="False" CanUserDeleteRows="False"
                  AutoGenerateColumns="False" ItemsSource="{Binding Equipment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Equipment Id"/>
                <DataGridTextColumn Header="Equipment Friendly Name "/>
                <DataGridTextColumn Header="Equipment Type"/>
                <DataGridCheckBoxColumn Header="Is Rentable"/>
                <DataGridTextColumn Header="Placeholder Equipment History"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
