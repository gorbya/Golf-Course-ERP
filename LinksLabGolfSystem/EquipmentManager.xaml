<UserControl x:Class="LinksLabGolfSystem.EquipmentManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinksLabGolfSystem"
             mc:Ignorable="d" 
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="14" FontWeight="Bold" Text="Equipment Management" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="grdEquipment" CanUserAddRows="False" CanUserDeleteRows="False"
                  AutoGenerateColumns="True" ItemsSource="{Binding Equipments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedEquipment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </DataGrid>

        <GridSplitter Grid.Column="1"
                      Width="5"
                      Background="Gray"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="True" />

        <StackPanel Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" FontWeight="Bold">Equipment Editor</TextBlock>
                <Button x:Name="btnCreateNewEquipment" HorizontalAlignment="Right">Register New Equipment</Button>
            </StackPanel>


            <TextBlock FontWeight="Bold" Margin="5">Description</TextBlock>
                <TextBox Text="{Binding SelectedEquipment.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock FontWeight="Bold" Margin="5">Maintenance Frequency</TextBlock>
                <TextBox Text="{Binding SelectedEquipment.MaintenanceFrequency , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <TextBlock FontWeight="Bold" Margin="5">Last Date Maintained</TextBlock>
                <TextBox Text="{Binding SelectedEquipment.LastDateMaintained, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <TextBlock FontWeight="Bold" Margin="5">Is Rented Out</TextBlock>
                <TextBox Text="{Binding SelectedEquipment.IsRentedOut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Button x:Name="btnSaveEquipment" Margin="0,15,0,0" Click="BtnSaveEquipment_OnClick">Save Changes</Button>



        </StackPanel>
        </Grid>
    </Grid>
</UserControl>
