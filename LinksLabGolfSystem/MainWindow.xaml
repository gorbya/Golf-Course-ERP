<mah:MetroWindow x:Class="LinksLabGolfSystem.MainWindow"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinksLabGolfSystem"
        mc:Ignorable="d"
        Title="LinksLab Golf System" Height="950" Width="1800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!-- Navigation Buttons (can be replaced with a menu) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Background="LightGray" Width="5000" >
            <Button x:Name="HomeButton"  Content="Home" Click="HomeButton_Click" Visibility="Hidden"/>
            <Button x:Name="CheckoutButton"  Content="Checkout Customer" Click="CheckoutButton_Click" Visibility="Hidden"/>
            <Button x:Name="ll"  Content="Orders" Click="OrdersButton_Click" Visibility="Hidden"/>
        </StackPanel>

        <!-- Content Area -->
        <ContentControl x:Name="MainContent" Grid.Row="1" />
    </Grid>
</mah:MetroWindow>