<UserControl x:Class="LinksLabGolfSystem.Scheduler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="3" Background="LightSteelBlue">
            <TextBlock Margin="10" Text="Scheduled Event Overview" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="South Course" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <syncfusion:SfScheduler EnableReminder="False" Grid.Row="1" Grid.Column="1" x:Name="southScheduler" 
                                ViewType="TimelineDay" 
                                />

        <TextBlock Grid.Row="2" Text="East Course" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <syncfusion:SfScheduler EnableReminder="False" Grid.Row="2" Grid.Column="1" x:Name="eastScheduler"
                                ViewType="TimelineDay" 
        />

        <TextBlock Grid.Row="3" Text="West Course" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <syncfusion:SfScheduler EnableReminder="False" Grid.Row="3" Grid.Column="1" x:Name="westScheduler"
                                ViewType="TimelineDay" 
        />

        <StackPanel Margin="5" Grid.Column="2" Grid.RowSpan="3" Grid.Row="1">

            <TextBlock Margin="5" FontWeight="Bold" Text="New Tee Time"></TextBlock>
            
            <TextBlock Margin="5">Customer</TextBlock>
            <ComboBox SelectedItem="{Binding SelectedCustomer}" ItemsSource="{Binding Customers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="FullName"></ComboBox>


            <TextBlock Margin="5">Number of Golfers</TextBlock>
            <TextBox x:Name="txtNumOfGolfers"></TextBox>

            <TextBlock Margin="5">Course</TextBlock>
            <ComboBox x:Name="txtCourse" ItemsSource="{Binding Courses, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ></ComboBox>

            <TextBlock Margin="5" Text="Holes"></TextBlock>
            <ComboBox x:Name="txtHoles" ItemsSource="{Binding Holes, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></ComboBox>

            <TextBlock Margin="5">Date</TextBlock>
            <syncfusion:SfDatePicker x:Name="DatePicker"></syncfusion:SfDatePicker>

            <TextBlock Margin="5">Time</TextBlock>
            <syncfusion:SfTimePicker x:Name="TimePicker"></syncfusion:SfTimePicker>

            <Button Margin="0,10,0,0"
                Click="ButtonBase_OnClick"
                    >Create Tee Time</Button>

</StackPanel>
            

    </Grid>
</UserControl>
